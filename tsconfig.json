{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "forceConsistentCasingInFileNames": true,
        "importsNotUsedAsValues": "error",
        "jsx": "preserve",
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext"
    },
    "include": ["src"]
}
