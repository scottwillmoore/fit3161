{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./src",
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "jsxImportSource": "emotion",
        "lib": ["dom", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "paths": {
            "app/*": ["./*"]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext"
    },
    "include": ["./**/*"],
    "exclude": ["node_modules"]
}
