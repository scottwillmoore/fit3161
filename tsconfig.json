{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "paths": {
            "@client/*": ["client/*"],
            "@common/*": ["common/*"],
            "@server/*": ["server/*"]
        },
        "forceConsistentCasingInFileNames": true,
        "importsNotUsedAsValues": "error",
        "jsx": "preserve",
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext"
    },
    "include": ["src"]
}
